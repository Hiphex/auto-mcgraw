{
  "manifest_version": 3,
  "name": "Auto-McGraw Smartbook",
  "version": "2.0",
  "description": "Transfers a question from MHEducation's Smartbook to AI assistants and then uses their response to auto‚Äêselect an answer.",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": [
    "https://learning.mheducation.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*",
    "https://deepseek.chat/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "48": "assets/icon.png"
  },
  "action": {
    "default_popup": "popup/settings.html",
    "default_icon": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://learning.mheducation.com/static/awd/*"],
      "js": ["lib/shared.js", "content-scripts/mheducation.js"]
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["lib/shared.js", "content-scripts/chatgpt.js"]
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["lib/shared.js", "content-scripts/gemini.js"]
    },
    {
      "matches": ["https://chat.deepseek.com/*", "https://deepseek.chat/*"],
      "js": ["lib/shared.js", "content-scripts/deepseek.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup/settings.html",
        "popup/settings.css",
        "popup/settings.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
